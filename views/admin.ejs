<%- include("partials/header.ejs") %>

<ul>
    <% articles.forEach(article => { %>
      <li>
        <%= article.judul %> -
        <a href="/articles/<%= article.id %>/edit">Edit</a> |
        <form action="/admin/articles/<%= article.id %>/delete" method="POST" style="display:inline;">
          <button onclick="">Hapus</button>
        </form>
      </li>
    <% }); %>
</ul>

<form action="/admin" method="POST">
    <label for="judul">Judul Artikel:</label><br>
    <input type="text" id="judul" name="judul"><br><br>
  
    <label for="konten">Isi Artikel:</label><br>
    <textarea id="konten" name="konten" rows="10" cols="60"></textarea><br><br>
  
    <input type="submit" value="Submit">
</form>

<%- include("partials/footer.ejs") %>